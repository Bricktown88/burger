<div class="row">
    <div class="col" align="center">

    <h1>Burgers!</h1>
    <img src="/assets/img/burger.jpg" data-id="burgerImage" alt="Burger" />
    </div>
</div>


<div class="row">
    <div class="col-6" align="center">
    
        <h2>Ready to eat!</h2>
        <ul>
            {{#each burgers}}
                {{#unless devoured}}
                {{> burgers/burger-block devoured=false}}
                {{/unless}}
            {{/each}}
        </ul>
    </div>

    <div class="col-6" align="center">
        <h2>Burgers that are eaten!</h2>

        <ul>
        {{#each burgers}}
            {{#if devoured}}
            {{> burgers/burger-block devoured=true}}
            {{/if}}
        {{/each}}
        </ul>

    </div>

</div>

<h2>Add a Burger</h2>
<form class="create-form">

  <div class="form-group">
    <label for="ca">Burger Name:</label>
    <input type="text" id="ca" name="name" devoured="0">
  </div>


  <button type="submit">Add Burger</button>
</form>
